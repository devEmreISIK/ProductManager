@model ProductManager.Models.DTOs.Products.ProductResponseDto

<h2>Update Product</h2>

<form asp-action="Update" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label>Product Name</label>
        <input type="text" name="ProductName" value="@Model.ProductName" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Price</label>
        <input type="number" name="Price" value="@Model.Price" step="0.01" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Stock</label>
        <input type="number" name="Stock" value="@Model.Stock" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Category</label>
        <select name="CategoryId" class="form-control">
            @foreach (var category in ViewBag.Categories as List<ProductManager.Models.DTOs.Categories.CategoryResponseDto>)
            {
                <option value="@category.Id" selected="@(Model.CategoryId == category.Id ? "selected" : null)">
                    @category.CategoryName
                </option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
